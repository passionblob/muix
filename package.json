{
  "private": true,
  "scripts": {
    "clean": "rimraf ./**/node_modules",
    "components": "yarn workspace @monthem/muix",
    "storybook": "yarn workspace @monthem/muix-storybook",
    "storybook:watch": "yarn storybook watch-stories",
    "storybook:reactnative": "yarn storybook start",
    "storybook:web": "concurrently \"yarn storybook:watch\" \"yarn storybook storybook-web\"",
    "storybook:android": "yarn storybook android",
    "storybook:ios": "yarn storybook ios"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/react-native-web",
      "**/react-native-web/**",
      "**/@react-native-community",
      "**/@react-native-community/**",
      "**/@storybook",
      "**/@storybook/**",
      "**/deepmerge",
      "**/chroma-js",
      "**/cross-env",
      "**/styled-components",
      "**/styled-components/**"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.0.2"
  }
}
